<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        style="@style/Theme.BrewDogApp.MainToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/activity_main_tabs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar"
        tools:context=".MainActivity" />

    <LinearLayout
        android:id="@+id/activity_main_tabs"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/activity_main_btn_beers"
            style="@style/Theme.BrewDogApp.MenuButton"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_info"
            android:text="@string/beers" />

        <Button
            android:id="@+id/activity_main_btn_filters"
            style="@style/Theme.BrewDogApp.MenuButton"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_filters"
            android:text="@string/filters" />

        <Button
            android:id="@+id/activity_main_btn_favorites"
            style="@style/Theme.BrewDogApp.MenuButton"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_favorites"
            android:text="@string/favorites"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/activity_main_btn_about"
            style="@style/Theme.BrewDogApp.MenuButton"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_info"
            android:text="@string/about" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>